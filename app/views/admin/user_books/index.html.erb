<p id="notice"><%= notice %></p>

<h1>Listing unapproved User Books</h1>

<table>
    <thead>
    <tr>
        <th>User</th>
        <th>URL</th>
        <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @user_books.each do |user_book| %>
        <tr>
            <td><%= user_book.user.email_id %></td>
            <td><%= user_book.url.to_s.split("?").first %></td>
            <!--<td><%= link_to 'Show', [:admin, user_book] %></td>-->
            <td><%= link_to 'Edit', edit_admin_user_book_path(user_book) %></td>
            <td><%= link_to 'Destroy', [:admin, user_book], :method => :delete, :data => {:confirm => 'Are you sure?'} %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<br>

